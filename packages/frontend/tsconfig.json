{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@components": [
        "src/components"
      ],
      "@pages": [
        "src/pages"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@common": [
        "src/common"
      ],
      "@hooks": [
        "src/hooks"
      ],
    }
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "typings.d.ts",
    "public"
  ]
}
